    ViewBag.Title = "UpdateExperience";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="mb-4">Deneyim Guncelleme Sayfasi</h2>

<form method="post">

    @Html.HiddenFor(x => x.ExperienceId)

    <label>Deneyim Basligi</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label>Deneyim Basligi</label>
    @Html.TextBoxFor(x => x.SubTitle, new { @class = "form-control" })
    <br />
    <label>Deneyim Basligi</label>
